{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "API for Platzi Video",
  "main": "index.js",
  "scripts": {
    "dev": "set DEBUG=app:* && nodemon index.js",
    "start": "set NODE_ENV=production&& node index.js",
    "seed:users": "set DEBUG=app:* && node scripts/mongo/seedUsers.js",
    "seed:apiKeys": "set DEBUG=app:* && node scripts/mongo/seedApiKeys.js",
    "seed:movies": "set DEBUG=app:* && node scripts/mongo/seedMovies.js",
    "debug": "set DEBUG=express:*,app:* && npm start",
    "inspect": "set DEBUG=express:*,app:* && nodemon --inspect index.js",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html"
  },
  "keywords": [
    "apiForPlatziVideo"
  ],
  "author": "aomine- Dev",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@hapi/joi": "^16.1.7",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.3.3",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chalk": "^3.0.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  }
}
